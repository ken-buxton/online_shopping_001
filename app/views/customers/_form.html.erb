<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  	<legend>Enter Customer Details</legend>
  	
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    
    <div class="field">
      <%= f.label :password %>
     <%= f.text_field :password %>
    </div>
    
    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.text_field :password_confirmation %>
    </div>
    
    <div class="field">
      <%= f.label :preferred_store %>
      <%= select "customer", "preferred_store_id", Store.all.collect {|s| [s.name, s.id] } %>
    </div>    
    
    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    
    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    
    <div class="field">
      <%= f.label :nick_name %>
      <%= f.text_field :nick_name %>
    </div>
    
    <div class="field">
      <%= f.label :home_phone %>
      <%= f.text_field :home_phone %>
    </div>
    
    <div class="field">
      <%= f.label :cell_phone %>
      <%= f.text_field :cell_phone %>
    </div>
    
    <div class="field">
      <%= f.label :address1 %>
      <%= f.text_field :address1 %>
    </div>
    
    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    
    <div class="field">
      <%= f.label :state %>
      <%= select "customer", "state_id", State.all.collect {|s| [s.state, s.id] } %>
    </div>    
    
    <div class="field">
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </div>
    
    <div class="actions">
     <%= f.submit %>
    </div>
  </fieldset>
<% end %>
