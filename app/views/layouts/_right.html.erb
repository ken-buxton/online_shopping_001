	<td class="top">
	<div id="rside">
		<% if notice %>
			<p id="notice"><%= notice%></p>
		<% end %>

		<fieldset> <legend>Your Shopping Lists</legend>

		<%= form_tag store_path, class: 'customer_shopping_list' do %>
			<%= label_tag 'set_customer_shopping_list_name', 'Customer Shopping Lists (click to show)'%>
			<%= select_tag 'set_customer_shopping_list_name', 
				options_for_select(@customer_shopping_lists, @cur_shopping_list),
				onchange: 'this.form.submit()',
				title: "Click to show all shopping lists"
			%>
			<%= submit_tag 'submit' %>
			<%= javascript_tag "$('.customer_shopping_list input').hide()" %>
		<% end %>

		<br>

		<%= form_tag store_path, class: 'shopping_list_name' do %>
			<%= label_tag 'shopping_list_name', 'Create/Rename:'%>
			<span style="margin-left: 10px;"></span>
			<%= text_field_tag 'shopping_list_name', @cur_shopping_list, class: "shopping_list_text", 
				title: "Shopping list name to be used when creating or renaming a shopping list" %>
			<%= submit_tag "Create", controller: "store", 
				title: "Enter shopping list name into 'Create/Rename List Name' field above and press this button to create a new shopping list"  %>
			<%= submit_tag "Rename", controller: "store", 
				title: "Enter shopping list name into 'Create/Rename List Name' field above and press this button to rename the current shopping list"  %>
			<br>
			<%= label_tag 'Delete', 'Delete:'%>
			<span style="margin-left: 67px;"></span>
			<%= submit_tag "Delete", controller: "store", 
				title: "Press this button to delete the current shopping list"  %>
			
		<% end %>
		</fieldset>
		<br>		

		<fieldset>
			<legend>
				<%= "Your Shopping Items" %>
				<% if not @cur_shopping_list.blank? %>
					<%= " (" + @cur_shopping_list + ")" %>
				<% end %>
			</legend>
		<% if not @customer_shopping_list_items.nil? %>
			<table>
				<tr class="top_line">
					<th>Brand - Description (Quantity)</th>
					<th class="right_justify">Min Wgt</th>
					<th class="right_justify">Price</th>
					<th>Unit</th>
					<th class="center">Quantity</th>
					<th class="right_justify">Ext Price</th>
					<th>Note</th>
					<th></th>
				</tr>
			
				<% item_count = 0 %>
				<% total = 0.0 %>
				<% @customer_shopping_list_items.each do |item| %>
					<% item_count += 1 %>
					<% total += (item['price'].to_f * item['quantity'].to_f) %>
					<tr class="<%= cycle('list_line_odd', 'list_line_even', name: 'items') %>">
						
						<% this_item = item['brand'] %>
						<% if item['brand'].size > 0 %>
							<% this_item += " - " %>
						<% end %>
						<% this_item += sanitize(item['descr']) %> 
						<% this_item += " (" + item['qty_desc'] + ")" %>
						<td class="short_brand_descr" title="<%= this_item %>">
							<% if this_item.size > 30 %>
								<%= this_item[0..29] + " ..." %>
							<% else %>
								<%= this_item %>
							<% end %>
						</td>
						
						<td class="right_justify"><%= number_with_precision(item['min_qty_weight'], precision: 2) %> </td>
						<td class="right_justify"><%= number_to_currency(item['price']) %></td>
						<td><%= item['uofm'] %></td>
												
						<td class="right_justify">
							<% set_change_qty_x = 'set_change_qty_' + item['id'].to_s %>
							<%= form_tag store_path, class: set_change_qty_x do %>
								<span>
								<%= number_field_tag set_change_qty_x, item['quantity'], in: 0.1..10, 
									class: "qty_update" 
								%>
								<%= submit_tag "Change Qty", controller: "store", class: 'submit_only' %>
								<%= javascript_tag "$('.#{set_change_qty_x} .submit_only').hide()" %>
								</span>
							<% end %>
						</td>					
						
						<td class="right_justify"><%= number_to_currency(item['price'].to_f * item['quantity'].to_f) %></td>
						
						<td>
							<% set_change_note_x = 'set_change_note_' + item['id'].to_s %>
							<%= form_tag store_path, class: set_change_note_x do %>
								<span>
								<%= text_field_tag set_change_note_x, item['note']
								%>
								<%= submit_tag "Change Note", controller: "store", class: 'submit_only' %>
								<%= javascript_tag "$('.#{set_change_note_x} .submit_only').hide()" %>
								</span>
							<% end %>
						</td>					
						
						<td style="width: 3em;"><%= link_to "Delete", controller: "store", delete_from_list: item['id'] %></td>
					</tr>
				<% end %>
				
				<tr class="bottom_line">
					<td class="bold"><%= "Total Items: #{item_count}"%></td>
					<td></td>
					<td></td>
					<td></td>
					<td class="right_justify bold">Total</td>
					<td class="right_justify bold"><%= number_to_currency(total) %></td>
					<td></td>
					<td></td>
				</tr>				
			</table>				
		<% end %>
		</fieldset>
	</div>
	</td>
