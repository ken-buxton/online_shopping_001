	<td class="top">
	<div id="rside">
		<% if notice %>
			<p id="notice"><%= notice%></p>
		<% end %>

		<fieldset> <legend>Your Shopping Lists</legend>

		<%= form_tag store_path, class: 'customer_shopping_list' do %>
			<%= select_tag 'set_customer_shopping_list', 
				options_for_select(@customer_shopping_lists, @cur_shopping_list),
				onchange: 'this.form.submit()'
			%>
			<%= submit_tag 'submit' %>
			<%= javascript_tag "$('.customer_shopping_list input').hide()" %>
		<% end %>
		<br>

		<%= form_tag store_path, class: 'shopping_list_name' do %>
			<%= text_field_tag 'shopping_list_name', @cur_shopping_list, class: "shopping_list_text" %>
			<br>
			<%= submit_tag "Create New Shopping List", controller: "store", class: "shopping_list_button" %>
			<%= submit_tag "Rename Current List", controller: "store", class: "shopping_list_button" %>
			<%= submit_tag "Delete Current List", controller: "store" %>
		<% end %>
		</fieldset>
		<br>		

		<fieldset>
			<legend>
				<%= "Your Shopping Items" %>
				<% if not @cur_shopping_list.blank? %>
					<%= " (" + @cur_shopping_list + ")" %>
				<% end %>
			</legend>
		<% if not @customer_shopping_list_items.nil? %>
			<table>
				<tr class="top_line">
					<th>Brand - Description (Quantity)</th>
					<th class="right_justify">Min Wgt</th>
					<th class="right_justify">Price</th>
					<th>Unit</th>
					<!-- <th class="right_justify">Qty</th> -->
					<th class="center">Quantity</th>
					<th class="right_justify">Ext Price</th>
					<th>Note</th>
					<th></th>
				</tr>
			
				<% item_count = 0 %>
				<% total = 0.0 %>
				<% @customer_shopping_list_items.each do |item| %>
					<% item_count += 1 %>
					<% total += (item['price'].to_f * item['quantity'].to_f) %>
					<tr class="<%= cycle('list_line_odd', 'list_line_even', name: 'items') %>">
						
						<% this_item = item['brand'] %>
						<% if item['brand'].size > 0 %>
							<% this_item += " - " %>
						<% end %>
						<% this_item += sanitize(item['descr']) %> 
						<% this_item += "(" + item['qty_desc'] + ")" %>
						<td class="short_brand_descr" title="<%= this_item %>">
							<%= this_item %>
						</td>
						<td class="right_justify"><%= number_with_precision(item['min_qty_weight'], precision: 2) %> </td>
						<td class="right_justify"><%= number_to_currency(item['price']) %></td>
						<td><%= item['uofm'] %></td>
						<!-- <td class="right_justify"><%= item['quantity'] %></td> -->
												
						<td class="right_justify">
							<%= form_tag store_path do %>
								<span>
								<%= number_field_tag 'set_change_qty_' + item['id'].to_s, item['quantity'], in: 0.1..10, 
									class: "qty_update" 
								%>
								<%= submit_tag "Change", controller: "store" %>
								</span>
							<% end %>
						</td>					
						
						<td class="right_justify"><%= number_to_currency(item['price'].to_f * item['quantity'].to_f) %></td>
						<td><%= item['note'] %></td>
						<td><%= link_to "Delete", controller: "store", delete_from_list: item['id'] %></td>
					</tr>
				<% end %>
				
				<tr class="top_line">
					<td class="bold"><%= "Total Items: #{item_count}"%></td>
					<td></td>
					<td></td>
					<td></td>
					<!-- <td></td> -->
					<td class="right_justify bold">Total</td>
					<td class="right_justify bold"><%= number_to_currency(total) %></td>
					<td></td>
					<td></td>
				</tr>				
			</table>				
		<% end %>
		</fieldset>
	</div>
	</td>
