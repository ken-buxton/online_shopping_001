<h2> <%= 'Shopping Items' %></h2>

<table>
	<tr class="top_line">
		<th></th>
		<th>Brand - Description (Quantity)</th>
		<th class="right_justify">Min Weight</th>
		<th class="right_justify">Price</th>
		<th>Unit</th>
		<th></th>
	</tr>
	
	<% if not @products.nil? %>
		<% @products.each do |product| %>
			<tr class="<%= cycle('list_line_odd', 'list_line_even', name: 'products') %>">
				<td><%= image_tag(product.image, class: 'list_image') %></td>
				<td>
					<%= product.brand %>
					<% if product.brand.size > 0 %>
					-
					<% end %>
					<%= sanitize(product.descr) %> 
					(<%= product.qty_desc %>)
				</td>
				<td class="right_justify"><%= product.min_qty_weight %> </td>
				<td class="right_justify"><%= number_to_currency(product.price) %></td>
				<td><%= product.uofm %></td>
				<td><%= link_to "Add", controller: "store", add_to_list: product.id %></td>
			</tr>
		<% end %>
	<% end %>
</table>
